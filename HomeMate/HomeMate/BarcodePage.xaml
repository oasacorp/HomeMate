<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   
             x:Class="HomeMate.BarcodePage">
    <ContentPage.Content>


        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="CenterAndExpand" >

            <Entry x:Name="ShortcutTitle" Placeholder="Room Name" ></Entry>
            <Entry x:Name="ShortcutAddress" Placeholder="Address" ></Entry>
            <Picker x:Name="iconPicker" Title="Select Icon"  HorizontalOptions="FillAndExpand" >
                <Picker.Items>
                    <x:String>Plus</x:String>
                    <x:String>Home</x:String>
                    <x:String>Bedroom</x:String>
                    <x:String>Bath</x:String>
                    <x:String>Living Room</x:String>
                    <x:String>Dining</x:String>
                    <x:String>Medical</x:String>
                    <x:String>Garage</x:String>
                    <x:String>Guest</x:String>
                    <x:String>Master</x:String>
                </Picker.Items>
            </Picker>
            <StackLayout Orientation="Horizontal">
            <Button x:Name="ButtonScanDefault" Text="Scan" Clicked="ButtonScanDefault_Clicked"/>
            <Button x:Name="AddtoDB" Text="Confirm" Clicked="AddtoDB_Clicked"/>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage> 